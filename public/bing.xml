<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/">
    <ShortName>Bing</ShortName>
    <Description>Bing</Description>
    <InputEncoding>UTF-8</InputEncoding>
    <LongName>Bing</LongName>
    <Language>*</Language>
    <Image width="16" height="16" type="image/icon">https://www.bing.com/favicon.ico</Image>
    <Url type="text/html" method="GET" template="https://www.bing.com/search">
        <Param name="q" value="{searchTerms}"/>
    </Url>
    <Url type="application/x-suggestions+json" method="GET" template="https://api.bing.com/osjson.aspx">
        <Param name="query" value="{searchTerms}"/>
        <Param name="language" value="{language}"/>
        <Param name="form" value="OSDJAS"/>
    </Url>
</OpenSearchDescription>
